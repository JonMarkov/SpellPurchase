.box {
  border-top: 20rpx solid #f8f8f8;
}

.goods_name {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 12px;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.activity_time {
  color: #cf0213;
  float: right;
}

/* 购买商品 */

.goods {
  width: 100%;
  height: 220rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  border-top: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
}

.goods_img {
  width: 180rpx;
  height: 180rpx;
}

.goods_details {
  width: 470rpx;
  height: 180rpx;
  float: right;
  margin-right: 20rpx;
}

.goods_title {
  font-size: 14px;
  padding-bottom: 20rpx;
}

.goods_size {
  font-size: 12px;
  color: #666;
  line-height: 42rpx;
  margin-top: 14rpx;
}

.price {
  width: auto;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 10rpx;
}

.unit_price {
  color: #ce0212;
  font-weight: bold;
  font-size: 14px;
  line-height: 24px;
  padding-top: 30rpx;
}

.suc_num {
  width: auto;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 12px;
}

.suc_num text {
  color: #ce0212;
}

/* 拼团人数 */

.group {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.group image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.get_btn {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background: #cf0213;
  border-radius: 50px;
  margin-top: 50rpx;
}
