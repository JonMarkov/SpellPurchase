page{background: #f8f8f8;}
/* 收货人地址 */
.add{
width: 100%;
height: 200rpx;
background: #fff;
margin: 10px 0;
}
.add_top{
width: 100%;
height: 80rpx;
line-height: 80rpx;
}
.add_top_left{
font-size: 14px;
float: left;
padding-left: 90rpx;
}
.add_top_right{
float: right;
font-size: 12px;
padding-right: 36rpx;
}
.add_bottom{
width: 100%;
height: 70rpx;
}
.add_icon{
width: 46rpx;
height: 50rpx;
padding-left: 30rpx;
float: left;
}
.add_mas{
float: left;
width: 580rpx;
height: 70rpx;
font-size: 26rpx;
padding-left: 10rpx;
line-height: 36rpx;
overflow: hidden;
}
.right{
float: right;
width: 40rpx;
height: 40rpx;
padding-top: 15rpx;
padding-right: 24rpx;
}

/* 购买商品 */
.goods{
width: 100%;
height: 280rpx;
background: #fff;
}
.goods_img{
width: 190rpx;
height: 190rpx;
padding: 45rpx 0 0 45rpx;
}
.goods_details{
width: 470rpx;
height: 210rpx;
float: right;
margin-right: 20rpx;
padding-top: 30rpx;
}
.goods_title{
font-size: 14px;
padding-bottom: 20rpx;
}
.goods_size{
font-size: 12px;
color: #666;
line-height: 42rpx;
margin-top: 14rpx;
}
.delivery{
font-size: 12px;
color: #ce0212;
line-height: 42rpx;
}
.price{
margin-top: 12rpx;
}
.unit_price{
color: #ce0212;
font-weight: bold;
font-size: 14px;
float: left;
line-height: 24px;
}
/* 合计 */
.total{
padding: 20rpx 0 20rpx 20rpx;
border-top: 1px solid #e6e6e6;
background: #fff;
position: fixed;
bottom: 0;
width: 100%;
font-size: 14px;
}
.total_price{
color: #ce0212;
font-weight: bold;
}
.put{
position: absolute;
right: 0;
top: 0;
padding: 20rpx 60rpx;
background: #ce0212;
color: #fff;
font-size: 14px;
}
