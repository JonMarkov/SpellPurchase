page{
background: #f8f8f8;
}
.box{
background: #fff;
margin-top: 40rpx;
}
.bargain_time{
background: #cf0213;
color: #fff;
font-size: 12px;
height: 24px;
line-height: 24px;
display: inline-block;
padding: 0 20px;
margin-left: 20rpx;
margin-top: 40rpx;
}
/* 购买商品 */
.goods{
width: 100%;
height: 190rpx;
background: #fff;
box-sizing: border-box;
padding: 0 20rpx;
margin: 40rpx 0;
}
.goods_img{
width: 190rpx;
height: 190rpx;
}
.goods_details{
width: 470rpx;
height: 190rpx;
float: right;
margin-right: 20rpx;
}
.goods_title{
font-size: 14px;
padding-bottom: 20rpx;
}
.goods_size{
font-size: 12px;
color: #666;
line-height: 42rpx;
margin-top: 14rpx;
}
.price{
width: auto;
height: 80rpx;
display: flex;
flex-direction: row;
flex-wrap: wrap;
justify-content: space-between;
margin-top: 10rpx;
}
.unit_price{
color: #ce0212;
font-weight: bold;
font-size: 14px;
line-height: 24px;
padding-top: 36rpx;
}
.bargain_succeed{
font-size: 12px;
line-height: 40rpx;
}
.bargain_succeed text{
color: #ce0212;
}
/* 砍价按钮 */
.bargain_btn {
display: flex;
flex-direction: row;
flex-wrap: wrap;
justify-content: center;
padding-bottom: 30rpx;
}
.bargain_btn button{
width: 265rpx;
height: 66rpx;
line-height: 66rpx;
border: 1px solid #cf0213;
border-radius: 50px;
background-color: #fff;
color: #cf0213;
font-size: 14px;
}
.bargain_btn button.active{
background: #cf0213;
color: #fff;
}