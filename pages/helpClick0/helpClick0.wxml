<view class="box">
  <view class="bargain_time">活动剩余：
    <text>1天 23:20:06</text>
  </view>
  <!-- 购买商品 -->
  <view class="goods">
    <image src="/images/head.jpg" class="goods_img"></image>
    <view class="goods_details">
      <text class="goods_title">{{infoDet.goodsName}}</text>
      <view class="goods_size">
        <text> {{infoDet.color}} </text>
        <text> {{infoDet.caiZhi}} </text>
        <text> {{infoDet.size}} </text>
        <text> {{infoDet.styles}} </text>
      </view>
      <view class="price">
        <text class="unit_price">￥{{infoDet.price}}</text>
        <view class="bargain_succeed">
          <view>已砍
            <text>{{infoDet.yiKan}}</text>元，还剩
            <text>{{infoDet.shengYu}}</text>元</view>
          <view>已有
            <text>{{infoDet.bargainSuccessNum}}</text>人砍价成功</view>
        </view>
      </view>
    </view>
  </view>
  <view class="bargain_btn">
    <button bindtap='OthersFnClick'>帮他砍价</button>
    <button bindtap='OwnFnClick' class="active">我要砍价</button>
  </view>
</view>