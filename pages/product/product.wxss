/* pages/product/product.wxss */

page {
  background: #fff;
  width: 100%;
}

/* 搜索框部分 */

.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.weui-icon-search {
  margin-right: 8px;
  font-size: inherit;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  /* right: 10px; */
  top: 11px;
}
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
  background: #f2f2f2;
}

.weui-search-bar__input {
  height: 36px;
  line-height: 36px;
  font-size: 14px;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #dc3c24;
  white-space: nowrap;
}

/* 商品部分 */

.infoDet {
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: center;
  margin: auto;
}

/* 商品title部分 */

.infoDet_title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 20rpx auto;
  align-items: center;
  width: 94%;
}

.infoDet_title_right {
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
}

.infoDet_title_right image {
  width: 6rpx;
  height: 38rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.infoDet_title_right_text {
  margin-left: 20rpx;
  align-items: center;
  justify-content: center;
  color: #cc020e;
  font-weight: bold;
}

.infoDet_title_left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.infoDet_title_left text {
  font-size: 30rpx;
  margin-right: 10rpx;
}

.infoDet_title_left image {
  width: 30rpx;
  height: 30rpx;
}

/* 商品内容部分 */

.info_det {
  display: flex;
  justify-content: center;
  text-align: center;
  flex-direction: column;
}

.infoDet_adv {
  width: 100%;
}

.infoDet_adv image {
  width: 99%;
  height: 130rpx;
}

.infoDet_info {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background: #f7f7f7;
}

.infoDet_info_det {
  width: 44%;
  /* height: 100px; */
  background: #fefefe;
  margin: 10rpx auto;
  display: flex;
  flex-direction: column;
  padding: 15rpx;
}

.infoDet_info_det_top image {
  width: 200rpx;
  height: 200rpx;
}

.infoDet_info_det_bottom {
  text-align: left;
}

.infoDet_info_det_bottom_title {
  color: #333;
  font-size: 28rpx;
}

.infoDet_info_det_bottom_money {
  color: #cc020e;
  font-size: 28rpx;
}
