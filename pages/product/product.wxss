/* pages/product/product.wxss */
page{
  background: #fff;
  width: 100%;
}
/* 搜索框部分 */
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
}
.weui-icon-search {
  margin-right: 8px;
  font-size: inherit;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  /* right: 10px; */
  top: 7px;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
  background: #f2f2f2;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}
.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28px;
}
.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #DC3C24;
  white-space: nowrap;
}
/* 商品部分 */
.infoDet{
  display: flex;
  flex-direction: column;
  width: 96%;
  justify-content: center;
  margin: auto
  
}
/* 商品title部分 */
.infoDet_title{
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
.infoDet_title_right{
  display: flex;
  flex-direction: row;
}
.infoDet_title_right image{
  width: 6rpx;
  height: 30rpx
}
.infoDet_title_left{
  display: flex;
  flex-direction: row
}
.infoDet_title_left image{
width: 10rpx;
height: 10rpx
