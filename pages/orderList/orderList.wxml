<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="tabNav">{{titleTypeSuc}}</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="tabNav">{{titleTypePen}}</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="tabNav">{{titleTypeoVerdue}}</view>
</view>
<swiper current="{{currentTab}}" duration="1000">
  <swiper-item>
    <view class='sucOrderList' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' wx:for="{{orderInfo}}" wx:key="">
      <view class='sucOrderList_title' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' bindtap='ToMyOrderDet'>
        <view class='sucOrderList_title_title'>
          <text>{{item.goodsName}}</text>
        </view>
        <view class='sucOrderList_title_state'>
          <text>已完成</text>
        </view>
      </view>
      <view class='sucOrderList_content'>
        <view class='sucOrderList_content_img' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' bindtap='ToMyOrderDet'>
          <image src='{{item.goodsImage}}'></image>
        </view>
        <view class='sucOrderList_content_det'>
          <view class='sucOrderList_content_det_info' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' bindtap='ToMyOrderDet'>
            <view class='sucOrderList_content_det_info_one'>
              订单号：{{item.orderNo}}
            </view>
            <view class='sucOrderList_content_det_info_two'>
              {{item.goodsDescribe}}
            </view>
          </view>
          <view class='sucOrderList_content_det_money'>
            <view class='sucOrderList_content_det_money_red' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' bindtap='ToMyOrderDet'>
              ￥ {{item.price}}
            </view>
            <view class='sucOrderList_content_det_money_btn'>
              <text wx:if="{{item.deliveryState == 1}}">未发货</text>
              <text wx:if="{{item.deliveryState == 2}}"  data-my_order='{{item.orderNo}}' bindtap='ToeditDeliveryState'>确认收货</text>
              <text wx:if="{{item.deliveryState == 3}}">已完成</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    
  </swiper-item>
  <swiper-item>
    <view class='penOrderList' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' wx:for="{{orderInfo}}" wx:key="" >
      <view class='sucOrderList_title'>
        <view class='sucOrderList_title_title' bindtap='ToMyOrderDet'>
          <text>{{item.goodsName}}</text>
        </view>
        <view class='sucOrderList_title_state' bindtap='ToMyOrderDet'>
          <text>{{order_type_text}}</text>
        </view>
      </view>
      <view class='sucOrderList_content'>
        <view class='sucOrderList_content_img' bindtap='ToMyOrderDet'>
          <image src='{{item.goodsImage}}'></image>
        </view>
        <view class='sucOrderList_content_det'>
          <view class='sucOrderList_content_det_info' bindtap='ToMyOrderDet'>
            <view class='sucOrderList_content_det_info_one'>
              订单号：{{item.orderNo}}
            </view>
            <view class='sucOrderList_content_det_info_two'>
              {{item.goodsDescribe}}
            </view>
          </view>
          <view class='sucOrderList_content_det_money'>
            <view class='sucOrderList_content_det_money_red' bindtap='ToMyOrderDet'>
              ￥ {{item.price}}
            </view>
            <view class='sucOrderList_content_det_money_btn'>
              <text wx:if="{{item.deliveryState == 1}}">未发货</text>
              <text wx:if="{{item.deliveryState == 2}}"  data-my_order='{{item.orderNo}}' bindtap='ToeditDeliveryState'>确认收货</text>
              <text wx:if="{{item.deliveryState == 3}}">已完成</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </swiper-item>
  <swiper-item>
    <view class='verdueOrderList' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' wx:for="{{orderInfo}}" wx:key="" >
      <view class='sucOrderList_title'>
        <view class='sucOrderList_title_title' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' bindtap='ToMyOrderDet'>
          <text>{{item.goodsName}}</text>
        </view>
        <view class='sucOrderList_title_state' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' bindtap='ToMyOrderDet'>
          <text>{{order_type_text}}</text>
        </view>
      </view>
      <view class='sucOrderList_content'>
        <view class='sucOrderList_content_img' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' bindtap='ToMyOrderDet'>
          <image src='{{item.goodsImage}}'></image>
        </view>
        <view class='sucOrderList_content_det'>
          <view class='sucOrderList_content_det_info'>
            <view class='sucOrderList_content_det_info_one' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' bindtap='ToMyOrderDet'>
              订单号：{{item.orderNo}}
            </view>
            <view class='sucOrderList_content_det_info_two' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' bindtap='ToMyOrderDet'>
              {{item.goodsDescribe}}
            </view>
          </view>
          <view class='sucOrderList_content_det_money'>
            <view class='sucOrderList_content_det_money_red' data-my_order='{{item.orderNo}}' data-my_state='{{order_state}}' bindtap='ToMyOrderDet'>
              ￥ {{item.price}}
            </view>
            <view class='sucOrderList_content_det_money_btn'>
              <text wx:if="{{item.deliveryState == 1}}">未发货</text>
              <text wx:if="{{item.deliveryState == 2}}" data-my_order='{{item.orderNo}}' bindtap='ToeditDeliveryState'>确认收货</text>
              <text wx:if="{{item.deliveryState == 3}}">已完成</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </swiper-item>
</swiper>