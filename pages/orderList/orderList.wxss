/* pages/orderList/orderList.wxss */

/* 下面是tobar */

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color: white;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 30%;
  color: #777;
  border-bottom: 0rpx;
}

.on {
  color: #da7c0c;
  border-bottom: 2rpx solid #da7c0c;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

/* 点击发布商品 */

.add-address {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  width: 88%;
  margin: 24rpx;
  padding: 20rpx;
  border: 1px solid #fea12e;
  background: #fea12e;
  border-radius: 10rpx;
  color: #fff;
  position: absolute;
  bottom: 10rpx;
}

/* 详情列表 */

.sucOrderList {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-top: 10rpx;
  background: #fff;
}

.penOrderList {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-top: 10rpx;
  background: #fff;
}

.verdueOrderList {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-top: 10rpx;
  background: #fff;
}

.sucOrderList_title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}

.sucOrderList_title_title {
  font-size: 26rpx;
  font-weight: bold;
}

.sucOrderList_title_state {
  font-size: 20rpx;
  color: #c4bfbf;
}

.sucOrderList_content {
  display: flex;
  flex-direction: row;
}

.sucOrderList_content_img image {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #f1efef;
}

.sucOrderList_content_det {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  align-items: flex-start;
  width: 100%;
}

.sucOrderList_content_det_info {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #c4bfbf;
  width: 100%;
}

.sucOrderList_content_det_money {
  display: flex;
  flex-direction: row;
  margin-top: 60rpx;
  justify-content: space-between;
  width: 100%;
  align-items: center;
}

.sucOrderList_content_det_money_red {
  color: #d00111;
  font-size: 32rpx;
}

.sucOrderList_content_det_money_btn {
  border: 1rpx solid #d00111;
  color: #da7c0c;
  font-size: 32rpx;
  padding: 5rpx 30rpx;
  border-radius: 50rpx;
}
