page{background: #f8f8f8;}
/* 购买信息列表 */
.lines{
width: 100%;
height: auto;
background: #fff;
margin-top: 10px;
margin-bottom: 10px;
}
.lines view{
width: 100%;
height: 100rpx;
line-height: 100rpx;
border-bottom: 1px solid #f0f0f0;
font-size: 14px;
box-sizing: border-box;
padding-left: 30rpx;
}
.last_line{
border-bottom: none!important;
}
/* 参与砍价人员 */
.participant{
background: #fff;
margin-bottom: 10px;
}
.participant_title{
line-height: 100rpx;
padding-left: 30rpx;
font-size: 14px;
}
.head_box{
display: flex;
flex-wrap: wrap;
}
.head{
width: 100rxp;
margin-left: 40rpx;
text-align: center;
margin-bottom: 20rpx;
}
.head_img {
width: 80rpx;
height: 80rpx;
border-radius: 50%;
}
.head_name{
font-size: 24rpx;
width: 100rpx;
height: 30rpx;
line-height: 30rpx;
overflow: hidden;
}