page {
  background: #f7f7f7;
}

/* 详细列表 */

.bills_info {
  margin-top: 160rpx;
}

.bills {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #ececec;
}

.bills_left_text_title {
  font-size: 28rpx;
  font-weight: bold;
}

.bills_left_text_type {
  font-size: 26rpx;
}

.bills_left_time {
  font-size: 22rpx;
}

/* 账单时间 */

.bill_time_box {
  width: 100%;
  height: 160rpx;
  background: #f7f7f7;
  border-bottom: 1px solid #b5b5b5;
  box-sizing: border-box;
  padding-left: 45rpx;
}

.bill_time {
  padding-top: 30rpx;
  font-size: 16px;
  color: #191919;
  font-weight: bold;
  /* font-family:"microsoft yahei"; */
}

.bill_details {
  padding-top: 10rpx;
  font-size: 14px;
  color: #8d8d8d;
}

.bill_details text {
  padding: 0 10px 0 2px;
}
